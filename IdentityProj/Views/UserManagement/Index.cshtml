@using Microsoft.AspNetCore.Identity;
@using IdentityProj.Models;
@model IdentityProj.ViewModels.UserManagementIndexViewModel
@inject UserManager<ApplicationUser> userManager
<table>
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Email</td>
                <td>@(string.Join(",",await userManager.GetRolesAsync(user)))</td>
                <td><a asp-controller="UserManagement" asp-action="AddRole" asp-route-id="@user.Id">Add Role</a></td>
            </tr>
        }
    </tbody>
</table>